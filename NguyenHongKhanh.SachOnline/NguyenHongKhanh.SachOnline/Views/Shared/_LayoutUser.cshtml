<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale" />
    <title>@(ViewBag.Title ?? "Sách Online")</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style type="text/css">
        .imgbook {
            transition: all 1s ease-in;
            width: 400px;
        }

            .imgbook:hover {
                transform: scale(0.9);
                cursor: pointer;
            }

        .imgsachbannhieu {
            width: 100px;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-inverse">
        <!--navbar-fixed-top-->
        <div class="container">
            @Html.Action("NavbarHeaderPartial", "SachOnline")

        </div>
        <!-- /.container-->
    </nav>


    <div class="container">
        @Html.Action("AdsPartial", "SachOnline")
        <hr>
    </div>
    <!-- /.container-->
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                @Html.Action("ChuDePartial", "SachOnline")
                <br>

                @Html.Action("NhaXuatBanPartial", "SachOnline")

            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                @RenderBody()
            </div>
        </div>
        <hr>
    </div>
    <!-- /.container-->
    <div class="container">
        @RenderSection("SachBanNhieu", required: false)

    </div>
    <!-- /.container-->
    <footer class="container well" align="center">
        <p>©2021 - Nhà sách ABC. Allright Reserved</p>
        <p>Website được phát triển để sử dụng làm bài tập thực hành môn Lập trình Web</p>
        <p>Email: abc@gmail.com</p>
    </footer>
</body>
</html>
